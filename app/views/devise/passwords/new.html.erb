<div class="min-h-screen w-full flex items-center justify-center bg-[#1982C4]/90">
  <div class="flex flex-col items-center justify-center bg-gray-200/90 rounded-3xl p-12 w-full max-w-md shadow-lg border border-black/20">
    <!-- Espaço para logo -->
    <div class="flex justify-center">
      <%= image_tag "logo_reduced.png", alt: "Logo", class: "w-40 h-40 object-contain" %>
    </div>

    <h2 class="text-2xl font-bold text-gray-800 mb-6">Recuperar senha</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4 w-full">
        <%= f.label :email, "E-mail", class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 rounded bg-white text-gray-800 focus:outline-none border border-black/25" %>
      </div>

      <div class="mb-4 w-full">
        <%= f.submit "Enviar redefinição", class: "w-full bg-white text-black font-bold py-2 rounded shadow hover:bg-[#156fa1] transition border border-black/20" %>
      </div>
    <% end %>

    <div class="w-full text-center space-y-2">
      <div class="text-primary font-semibold">
        <%= link_to "Voltar para o login", new_session_path(resource_name), class: "text-primary hover:underline font-semibold text-[#0000FF]" %>
      </div>
    </div>
  </div>
</div>