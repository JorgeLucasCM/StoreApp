<div class="min-h-screen w-full flex items-center justify-center bg-[#1982C4]/90">
  <div class="flex flex-col items-center justify-center bg-gray-200/90 rounded-3xl p-12 w-full max-w-md shadow-lg border border-black/20">
    <!-- Espaço para logo -->
    <div class="flex justify-center">
      <%= image_tag "logo_reduced.png", alt: "Logo", class: "w-40 h-40 object-contain" %>
    </div>

    <h2 class="text-2xl font-bold text-gray-800 mb-6">Entrar</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 font-semibold mb-1 " %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 rounded bg-white text-gray-800 focus:outline-none border border-black/25" %>
      </div>

      <div class="mb-4">
        <%= f.label "Senha", class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 rounded bg-white text-gray-800 focus:outline-none border border-black/25" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4 flex items-center">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, class: "text-gray-700 font-bold" %>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.submit "Entrar", class: "w-full bg-gray-100 text-black font-bold py-2 rounded shadow hover:bg-[#19a2df]/90 transition border border-black/20" %>
      </div>
    <% end %>

    <div class="w-full text-center space-y-2">
      <div class="text-primary font-semibold">
        Não tem conta? 
        <%= link_to "Registre-se.", new_registration_path(resource_name), class: "text-primary hover:underline font-semibold text-[#0000FF]" %>  
      </div>
      <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "text-primary hover:underline font-semibold  text-[#0000FF]" %>
    </div>
  </div>
</div>