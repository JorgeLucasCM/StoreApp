<div class="min-h-screen w-full flex items-center justify-center bg-[#1982C4]/90">
  <div class="flex flex-col items-center justify-center bg-gray-200/90 rounded-3xl p-12 w-full max-w-md shadow-lg border border-black/20">
    <!-- Espaço para logo -->
    <div class="flex justify-center">
      <%= image_tag "logo_reduced.png", alt: "Logo", class: "w-40 h-40 object-contain" %>
    </div>

    <h2 class="text-2xl font-bold text-gray-800 mb-6">Criar Conta</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 rounded bg-white text-gray-800 focus:outline-none border border-black/25" %>
      </div>

      <div class="mb-4">
        <%= f.label "Senha", class: "block text-gray-700 font-semibold mb-1" %>
        <% if @minimum_password_length %>
          <em class="text-xs text-gray-500">(<%= @minimum_password_length %> caracteres mínimo)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 rounded bg-white text-gray-800 focus:outline-none border border-black/25 mt-1" %>
      </div>

      <div class="mb-4">
        <%= f.label "Repita a senha", class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 rounded bg-white text-gray-800 focus:outline-none border border-black/25" %>
      </div>

      <div class="mb-4">
        <%= f.submit "Registrar", class: "w-full bg-gray-100 text-black font-bold py-2 rounded shadow hover:bg-[#19a2df]/90 transition border border-black/20" %>
      </div>
    <% end %>

    <div class="w-full text-center space-y-2">
      <div class="text-primary font-semibold">Já tem conta? 
        <%= link_to "Entrar.", new_session_path(resource_name), class: "text-primary hover:underline font-semibold text-[#0000FF]" %><br>  
      </div>
      
    </div>
  </div>
</div>